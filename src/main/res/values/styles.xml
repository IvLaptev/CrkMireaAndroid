<resources>

    <style name="Widget.Theme.MyApplication.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="h1">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="h2">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="article">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="light_text">
        <item name="fontFamily">@font/hind_madurai_light</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="input_label">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="action_button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/action</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="rounded_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>